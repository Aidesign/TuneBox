block content
	nav(class="navbar navbar-inverse navbar-fixed-top" role="navigation" ng-controller="navigationCtrl")
		div.row
			//div.col-md-2
			div.col-md-12
				div.navbar-header
				button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a(class="navbar-brand" href="#/") Tunebox
				div.collapse.navbar-collapse#bs-example-navbar-collapse1
					ul.nav.navbar-nav
						li
							a(href="#/room") Temp Room
						li
							a(href="#/browse") Browse
						li
							a(href="#/create-room") Create Room
					ul.nav.navbar-nav.navbar-right.very-small-padding-right
